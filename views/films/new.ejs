<h1>New Film</h1>

<form method="POST" action="/films">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" placeholder="Name" class="form-control">
  </div>
  <div class="form-group">
    <label for="releaseDate">Release Date</label>
    <input type="date" name="releaseDate" id="releaseDate" class="form-control">
  </div>
  <div class="form-group">
    <label for="synopsis">Synopsis</label>
    <textarea name="synopsis" id="synopsis" placeholder="Synopsis" class="form-control"></textarea>
  </div>
  <div class="form-group">
    <label for="genre">Genre</label>
    <select name="genre" id="genre" class="form-control select2">
      <% genres.forEach((genre) => { %>
        <option><%= genre %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="wikipedia">Wikipedia Link</label>
    <input type="text" name="wikipedia" id="wikipedia" placeholder="Wikipedia Link" class="form-control">
  </div>
  <div class="form-group">
    <label>Images</label>
    <input type="text" name="images[]" class="form-control">
    <input type="text" name="images[]" class="form-control">
    <input type="text" name="images[]" class="form-control">
  </div>

  <button class="btn btn-primary">Add</button>
</form>
